!!!
%html
  %head
    %title Playetry
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{'property' => 'og:image', 'content' => "#{image_url('playetry-og.png')}"}
    %meta{'property' => 'og:site_name', 'content' => 'playetry'}
    %meta{'property' => 'og:description', 'content' => "read, write, listen to and record poetry"}
    %meta{'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1'}
  %body{'data-controller' => "#{ controller.controller_path }", 'data-action' => "#{ controller.action_name }", 'data-current-user' => "#{ current_user.try(:id) }" }
    = render 'layouts/navbar'
    %p.notice= notice
    %p.alert= alert
    .container
      = yield

